{{!< default}}

{{#is "page"}}
	
	{{!-- If it is static page show as follows: --}}

	{{#post}}
	{{#if feature_image}}

		{{!-- Page with image 
					Display 50% division, text/image
			--}}
	
		<section id="banner">
	    <div class="content">
	    	<header class="post-full-header">
			    <h1 class="post-full-title">{{title}}</h1>
			  </header>
	    	{{content}}
	  	</div>
	  	<a href="" class="image object"><img src="{{img_url feature_image}}" /></a>
		</section>
	{{else}}
		{{!-- Text page
					Keep margin at left for design consistency
			--}}
		<script></script>
		<section>
	  	<header class="post-full-header">
		    <h1 class="post-full-title">{{title}}</h1>
		  </header>
	  	{{content}}
		</section>
	{{/if}}
	{{/post}}

{{else}}

	{{#post}}
	{{!-- Everything inside the #post tags pulls data from the page --}}
	<section>
    <header class="main content">
        <h1>{{title}}</h1>
    </header>

    {{#if feature_image}}
    <div class="image main"><img src="{{img_url feature_image}}" alt="{{title}}" /></div>
    {{/if}}
    <div class="content">
        {{content}}
    </div>
	</section>
	{{/post}}

{{/is}}