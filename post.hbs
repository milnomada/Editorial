{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#post}}
{{!-- Everything inside the #post tags pulls data from the post --}}
<section>

	{{!-- Search results --}}
	{{> search}}

	<header class="main content">
		<span class="date">{{date format="MMMM D, YYYY"}}</span>
		<h1>{{title}}</h1>
		{{#if tags}}
			<span>On </span>
	    <ul class="taglist">
	    {{#foreach tags}}
	      <li>
	        <a href="/tag/{{slug}}" title="{{name}}" class="tag tag-{{id}} {{slug}}">{{name}}</a>
	        <span class="sep">,</span>
	      </li>
	    {{/foreach}}
	    </ul>
	  {{/if}}
	  {{!-- bookmark it! --}}
	  <ul class="icons pull-right">
      <li><a class="icon fa-bookmark bookmark" title="Save in your collection" data-elem="book-mark"><span  class=""></span></a></li>
    </ul>
		{{#if custom_excerpt}}
			<p class="content">{{custom_excerpt}}</p>
		{{/if}}
	</header>

	{{!-- 
	{{#if feature_image}}
	<div class="image main"><img src="{{img_url feature_image}}" alt="{{title}}" /></div>
	{{/if}}
	--}}

	<div class="content">
		{{content}}

		{{!-- 
			Similar posts 
			Request similar posts only for the first tag found
			So to minimize the requests done to build up this view.
		--}}
		{{prepare_tags tags}}
		{{ setvar 'taglist' (prepare_tags tags) }}
		{{@root.taglist}}
		{{#if tags}}
			{{ setvar 'tagname' '' }}
			{{#each tags as |tag|}}
				{{#if @first}}
					{{ setvar 'one' (lowercase tag.name) }}
      		One {{@root.one}}
				{{/if}}
			{{/each}}
			<br>
			<hr />
			{{@root.taglist}}
			{{#get "posts" limit="4" filter="tags:[{{tags[*].slug}}]" include="tags" as |similar|}}
			<header class="major">
				<h3>Similar articles</h3>
			</header>
		  <section class="posts similar">
		    {{#foreach similar}}
		    <article class="small">
	        {{#if feature_image}}
	        <a href="{{url}}" class="image fit"><img src="{{img_url feature_image}}" alt="{{title}}" /></a>
	        {{/if}}
	        <h3><a href="{{url}}">{{title}}</a></h3>
	        <a href="{{url}}" class="pull-bottom-right more">Read more ></a>
		    </article>
		    {{/foreach}}
		  </section>
		  {{else}}
		  <p>Few posts should appear here</p>
		  {{/get}}
		  <hr />
		  
	  {{/if}}
  </div>

	{{!-- Email subscribe form at the bottom of the page --}}
	{{#if @labs.subscribers}}
	<section class="subscribe-form">
		<h3 class="subscribe-form-title">Subscribe to {{@site.title}}</h3>
		<p>Get the latest posts delivered right to your inbox</p>
		{{subscribe_form placeholder="youremail@example.com"}}
	</section>
	{{/if}}

	

	<footer class="post-footer">
		<div class="authors">
			{{#foreach authors}}
			<a class="author-box" href="{{url}}">
				{{#if profile_image}}
				<img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" />
				{{/if}}
				<section class="author-box-content">
					<div class="author-box-label">Picker</div>
					<h5 class="author-box-name">{{name}}</h5>
					{{#if bio}}
					<p>{{bio}}</p>
					{{else}}
					<p>Read more posts by this collaborator.</p>
					{{/if}}
				</section>
			</a>
			{{/foreach}}
		</div>

	</footer>

	{{!--
	<section class="post-full-comments">
		If you want to embed comments, this is a good place to do it!
	</section>
	--}}

</section>
{{/post}}

<script>
	var images = document.querySelectorAll('.kg-gallery-image img');
	images.forEach(function (image) {
		var container = image.closest('.kg-gallery-image');
		var width = image.attributes.width.value;
		var height = image.attributes.height.value;
		var ratio = width / height;
		container.style.flex = ratio + ' 1 0%';
	})
</script>
